{
  "name": "studentsathi",
  "version": "1.0.0",
  "private": true,
  "description": "Student Engagement & Analytics Platform - Monorepo",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "install:all": "npm install", 
    "prisma:migrate": "npm run prisma:migrate --workspace=backend",
    "prisma:generate": "npm run prisma:generate --workspace=backend",
    "test": "npm run test --workspaces",
    "lint": "cd frontend && npm run lint"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naman-agarwal-16/StudentSathi.git"
  },
  "keywords": [
    "lms",
    "education",
    "student-engagement",
    "analytics",
    "rbac",
    "supabase"
  ],
  "author": "Naman Agarwal",
  "license": "MIT"
}
