{
  "name": "studentsathi",
  "version": "1.0.0",
  "private": true,
  "description": "Student Engagement & Analytics Platform - Monorepo",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "prisma:migrate": "cd backend && npx prisma migrate deploy",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:studio": "cd backend && npx prisma studio",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naman-agarwal-16/StudentSathi.git"
  },
  "keywords": [
    "lms",
    "education",
    "student-engagement",
    "analytics",
    "rbac",
    "supabase"
  ],
  "author": "Naman Agarwal",
  "license": "MIT"
}
