# Environment
NODE_ENV=development
PORT=3001

# Database - Supabase (recommended for production)
# Get your connection string from: https://app.supabase.com/project/_/settings/database
# Format: postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/studentsathi?schema=public"

# Supabase Configuration (optional - for additional features)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Frontend
FRONTEND_URL=http://localhost:8080

# Security
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-change-in-production-32-chars
CORS_ORIGIN=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email / SMTP (optional - for password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@studentsathi.com

# API Keys (for external integrations)
GOOGLE_CLASSROOM_API_KEY=
CANVAS_API_KEY=
MOODLE_API_KEY=
